# directories

PNP_DIR = ../../

MODULES_DIR = $(PNP_DIR)/modules/
CTRL_DIR = $(MODULES_DIR)/ctrl/
OBJ_DIR = $(CTRL_DIR)/obj/
TST_DIR = $(CTRL_DIR)/tst/

# target: dependencies
#	action

all:
	cd $(OBJ_DIR) && $(MAKE) && cd ..
 ifeq ($(TST), true)
	cd $(TST_DIR) && $(MAKE) && cd ..
 endif

clean:
	cd $(OBJ_DIR) && $(MAKE) clean && cd ..
#	cd $(TST_DIR) && $(MAKE) clean && cd ..

