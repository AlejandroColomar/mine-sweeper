# -*- MakeFile -*-

# MACRO = substitute with this

# directories

MSW_DIR = ../../

MODULES_DIR = $(MSW_DIR)/modules/
XYZZY_DIR = $(MODULES_DIR)/xyzzy/
OBJ_DIR = $(XYZZY_DIR)/obj/
TST_DIR = $(XYZZY_DIR)/tst/

# target: dependencies
#	action

all:
	cd $(OBJ_DIR) && $(MAKE) && cd ..
 ifeq ($(TST), true)
	cd $(TST_DIR) && $(MAKE) && cd ..
 endif

clean:
	cd $(OBJ_DIR) && $(MAKE) clean && cd ..
#	cd $(TST_DIR) && $(MAKE) clean && cd ..

